<?xml version="1.0" encoding="utf-8"?>

<FrameLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:background="@color/ARDarkBlue"
    android:padding="4dp"
    android:layout_height="fill_parent">  

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ARGray"
    
    android:orientation="vertical" >

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AR Events"
        android:textColor="@color/ARDarkBlue"
        android:layout_gravity="center" 
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />


        <TextView
            android:id="@+id/keywordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keyword:"
            android:textColor="@color/ARGrayTextColor"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/keywordText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingLeft="45dp" />
        </LinearLayout>
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance: "
        android:paddingTop="15dp"
        android:textColor="@color/ARGrayTextColor"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />



    

                 <RadioGroup
                     android:id="@+id/radioDistanceGroup"
                     android:layout_width="wrap_content"
                     android:orientation="horizontal"                
                     android:layout_height="wrap_content" >
                

                 <RadioButton
                     android:id="@+id/oneMile"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/ARGrayTextColor"
                     android:text="1mi" />

                 <RadioButton
                     android:id="@+id/fiveMile"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/ARGrayTextColor"
                     android:checked="true"
                     android:text="5mi" />

                 <RadioButton
                     android:id="@+id/tenMile"
                     android:layout_width="wrap_content"
                     android:textColor="@color/ARGrayTextColor"
                     android:layout_height="wrap_content"
                     android:text="10mi" />

                 <RadioButton
                     android:id="@+id/twentyMile"
                     android:layout_width="wrap_content"
                     android:textColor="@color/ARGrayTextColor"
                     android:layout_height="wrap_content"
                     android:text="20mi" />
          
 			</RadioGroup>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Time:"
            android:textColor="@color/ARGrayTextColor"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />
       

            <RadioGroup
	        android:id="@+id/radioTimeGroup"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        android:layout_height="wrap_content" >
    
    
           

                <RadioButton
                    android:id="@+id/today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ARGrayTextColor"
                    android:text="Today" />

                <RadioButton
                    android:id="@+id/thisWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ARGrayTextColor"
                    android:checked="true"
                    android:text="This Week" />

                <RadioButton
	                android:id="@+id/thisMonth"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/ARGrayTextColor"
	                android:text="Next Week" />



            </RadioGroup>
    
     

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:orientation="vertical" >

          <Button
              android:id="@+id/searchButton"
              style="@style/ButtonText"
              android:layout_width="120dp"
              android:layout_height="50dp"
              android:background="@drawable/btn_ar_blue"
              android:gravity="center"
              android:padding="5dp"
              android:paddingLeft="20dp"
              android:paddingTop="100dp"
              android:text="Search" />

      </LinearLayout>

     

</LinearLayout>

</FrameLayout>